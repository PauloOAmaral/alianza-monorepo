{
    "extends": "@alianza/tsconfig/app.json",
    "include": [
        "global.d.ts",
        ".react-router/types/**/*",
        "app/**/*",
        "app/**/.server/**/*",
        "app/**/.client/**/*",
        "react-router.config.ts",
        "worker-configuration.d.ts"
    ],
    "compilerOptions": {
        "jsx": "react-jsx",
        "types": ["vite/client"],
        "rootDirs": [".", "./.react-router/types"],
        "paths": {
            "~/*": ["./app/*"]
        }
    }
}
