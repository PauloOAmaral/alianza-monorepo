{
    "$schema": "https://turborepo.org/schema.json",
    "globalDependencies": ["**/.env"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["build/**"]
        },
        "dev": {
            "inputs": ["$TURBO_DEFAULTS$", ".env"],
            "persistent": true,
            "cache": false
        },
        "dev:admin": {
            "persistent": true,
            "cache": false
        },
        "tail": {
            "persistent": true,
            "cache": false
        },
        "format": {
            "cache": false
        },
        "lint": {
            "cache": false
        },
        "typecheck": {
            "cache": false
        },
        "clean": {
            "cache": false
        }
    }
}
